<% provide(:title, @league.name) %>

<script>
  $(document).ready(function () {
    $("#listTeams").DataTable();


  });

</script>

<div class="divs">
  <div class="col-md-offset-2 col-xs-8">
    <div class="box">

      <div class="col-md-offset-4 col-md-4">
        <h3 class="text-center text-capitalize"><%= @league.name %></h3>
        <%= button_to "Journeys", journeys_show_path , :method => :get, class:"btn btn-primary" %>
        <% if current_user.admin %>
            <%= button_to "Create New League", new_league_path, :method => :get, class: "btn btn-primary"  %>
        <% end %>
      </div>
      <% if @league.teams.any? %>
          <div class="row">
            <div class="box-body table-responsive">
              <table id="listTeams" class="table table-bordered table-hover" style="background-color: #FFFFFF">
                <thead>
                <tr class="info">
                  <th class="text-center" style="background-color:lightgrey;">Name</th>
                  <th class="text-center" style="background-color:lightgrey;">User</th>
                  <th class="text-center" style="background-color:lightgrey;">League</th>
                </tr>
                </thead>
                <tbody>
                <% @teams.each do |team| %>
                    <tr>
                      <% if team.image_path.nil? %>
                          <td><%= image_tag "default_team.png", size: "30x30" %><%= link_to team.name, team %></td>
                      <% else %>
                          <td><%= image_tag team.image_path, size: "30x30" %><%= link_to team.name, team %></td>
                      <% end %>
                      <% if current_user.teams.any? %>
                          <% if !team.user %>
                              <td class="text-center">Free</td>
                          <% else %>
                              <td class="text-center"><%= team.user.username %></td>
                          <% end %>
                      <% else %>
                          <% if !team.user %>
                              <td class="text-center">Free
                              <%= link_to choose_team_path(team), method: :post, data: { confirm: "Are you sure?"} do %>
                                  <span class="glyphicon glyphicon-check"></span>
                              <% end %></td>
                          <% else %>
                            <td class="text-center"><%= team.user.username %></td>
                          <% end %>
                      <% end %>
                      <td class="text-center"><%= team.league.name %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

