<%= div_for user do %>
  <li>
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.username, user %>
    |
    <%= link_to 'Edit', action: :edit, id: user.id %>
    <% if current_user.admin && !current_user?(user) %>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: "You sure?" }, remote: true %>
    <% end %>
  </li>
<%end%>