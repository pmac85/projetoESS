<% provide(:title, 'Transfers') %>
<div class="row">
  <aside class="col-md-6">
    <h1>All Players</h1>
    <table class="table table-hover table-striped">
      <thead>
      <tr class="info">
        <th>Name</th>
        <th>Team</th>
        <th>Position</th>
        <th>Value</th>
      </tr>
      </thead>
      <tbody>
      <%= render @allplayers %>
      </tbody>
    </table>
    <%= will_paginate @allplayers%>
  </aside>
  <aside class="col-md-6">
    <% if @team.players.any? %>
        <h1>Your Team</h1>
        <table class="table table-hover table-striped">
          <thead>
          <tr class="info">
            <th>Name</th>
            <th>Team</th>
            <th>Position</th>
            <th>Value</th>
          </tr>
          </thead>
          <tbody>
          <%= will_paginate @players%>
          <%= render @players %>
          </tbody>
        </table>
        <%= will_paginate @players%>
    <% end %>
  </aside>
</div>